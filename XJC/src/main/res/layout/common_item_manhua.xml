<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/manhua_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            fresco:fadeDuration="1000"
            fresco:placeholderImage="@mipmap/xsearch_loading"
            fresco:placeholderImageScaleType="centerInside" />

        <TextView
            android:id="@+id/gengxin_type"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="2dp"
            android:background="@drawable/gengxin_style"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="2dp"
            android:text="一周三更"
            android:textColor="@color/whiteColor"
            android:textSize="8dp"
            fresco:ignore="HardcodedText" />
    </FrameLayout>

    <TextView
        android:id="@+id/manhua_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="漫画名称漫画名称漫画名称漫画名称漫画名称漫画名称漫画名称漫画名称漫画名称"
        android:textAlignment="textStart"
        android:textSize="10sp"
        fresco:ignore="HardcodedText,SmallSp" />

    <TextView
        android:id="@+id/manhua_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="作者名称作者名称作者名称作者名称作者名称作者名称作者名称作者名称作者名称作者名称作者名称作者名称作者名称"
        android:textAlignment="textStart"
        android:textColor="@android:color/darker_gray"
        android:textSize="10sp"
        fresco:ignore="HardcodedText,SmallSp" />
</LinearLayout>