<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/manhua_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray_color"
    tools:context="name.kangjun.xjc.view.ManhuaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.recker.flybanner.FlyBanner
            android:id="@+id/banner_manhua"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorAccent"
            app:points_position="RIGHT"
            app:points_visibility="true" />

        <!-- 本周人气 -->
        <include layout="@layout/yizhourenqi_section" />
        <!--精挑细选-->
        <include layout="@layout/jingtiaoxixuan_section"/>
    </LinearLayout>


</ScrollView>
