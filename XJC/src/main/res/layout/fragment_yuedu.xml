<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray_color"
    tools:context="name.kangjun.xjc.view.YueduFragment">

    <LinearLayout
        android:id="@+id/linearlayout_pageview_menu_fragmentyuedu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_dark"
            android:orientation="horizontal">

            <net.lucode.hackware.magicindicator.MagicIndicator
                android:id="@+id/sliding_tabs_fragmentyuedu"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="9" />

            <ImageButton

                android:id="@+id/search_imagebutton_fragmentyuedu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="Search Button"
                android:src="@mipmap/novel_search_new"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/content_viewpager_fragmentyuedu"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</FrameLayout>
